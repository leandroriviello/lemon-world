## One of these must be set (Auth.js v5 prefers AUTH_SECRET)
AUTH_SECRET="" # Generate with `npx auth secret` or `openssl rand -base64 32`
NEXTAUTH_SECRET="" # Backwards-compatible; also supported by code
## Base URL for callbacks (v5 uses AUTH_URL)
AUTH_URL='' # e.g., http://localhost:3000 or your deployed URL
AUTH_TRUST_HOST=true
NEXTAUTH_URL='' # Optional: kept for compatibility if you prefer
HMAC_SECRET_KEY='' # Generate: `openssl rand -base64 32`
NEXT_PUBLIC_APP_ID='app_1234567890' # App ID from World App Dev Portal
NEXT_PUBLIC_APP_ENV='production'
NEXT_PUBLIC_MOCK='false' # 'true' to force mock pay flow locally
NEXT_PUBLIC_LEMON_FALLBACK_URL='https://lemon.me' # Optional: where to redirect if deeplink fails
NEXT_PUBLIC_LEMON_IOS_STORE_URL='https://apps.apple.com/co/app/lemon-cash-tu-wallet-crypto/id1499421511'
NEXT_PUBLIC_LEMON_ANDROID_STORE_URL='https://play.google.com/store/apps/details?id=com.applemoncash'
## Explorer + API for on-chain history
NEXT_PUBLIC_BASE_EXPLORER_URL='https://basescan.org'
NEXT_PUBLIC_WORLDCHAIN_EXPLORER_URL='https://worldscan.org'
BASESCAN_API_URL='https://api.basescan.org/api'
BASESCAN_API_KEY='' # Optional; required for higher rate limits
WORLDCHAIN_API_URL='https://api.worldscan.org/api' # Etherscan-compatible (Worldscan)
WORLDCHAIN_API_KEY='' # Optional
OPTIMISM_API_URL='' # Optional Etherscan-compatible endpoint (api-optimistic.etherscan.io/api)
OPTIMISM_API_KEY='' # Optional
WLD_CONTRACT_BASE='' # Optional: WLD ERC-20 contract on Base to filter
WLD_CONTRACT_OPTIMISM='' # Optional: WLD ERC-20 contract on Optimism
WLD_CONTRACT_ETHEREUM='' # Optional: WLD ERC-20 contract on Ethereum
WLD_CONTRACT_WORLDCHAIN='' # Optional: WLD ERC-20 (or bridged) on World Chain
WLD_DECIMALS='18'
## Alchemy (or compatible RPC) endpoints
ALCHEMY_API_KEY='' # Generic API key; works across networks
ALCHEMY_BASE_RPC_URL='' # e.g., https://base-mainnet.g.alchemy.com/v2/XXXX
ALCHEMY_OPT_RPC_URL=''  # e.g., https://opt-mainnet.g.alchemy.com/v2/XXXX
WORLDCHAIN_RPC_URL=''   # e.g., https://worldchain-mainnet.g.alchemy.com/v2/XXXX or other provider
WORLDCHAIN_LOG_SPAN_BLOCKS='' # Optional: custom block span for RPC log scan
WORLDCHAIN_LOG_MAX_SPAN_BLOCKS='' # Optional: max total span to scan (default 3,000,000)
WORLDCHAIN_LOG_WINDOW_BLOCKS='' # Optional: window size per eth_getLogs call (default 200,000)
## Database (Railway Postgres)
DATABASE_URL='' # postgres://user:pass@host:port/dbname
