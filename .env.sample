## One of these must be set (Auth.js v5 prefers AUTH_SECRET)
AUTH_SECRET="" # Generate with `npx auth secret` or `openssl rand -base64 32`
NEXTAUTH_SECRET="" # Backwards-compatible; also supported by code
## Base URL for callbacks (v5 uses AUTH_URL)
AUTH_URL='' # e.g., http://localhost:3000 or your deployed URL
AUTH_TRUST_HOST=true
NEXTAUTH_URL='' # Optional: kept for compatibility if you prefer
HMAC_SECRET_KEY='' # Generate: `openssl rand -base64 32`
NEXT_PUBLIC_APP_ID='app_1234567890' # App ID from World App Dev Portal
NEXT_PUBLIC_APP_ENV='production'
NEXT_PUBLIC_MOCK='false' # 'true' to force mock pay flow locally
NEXT_PUBLIC_LEMON_FALLBACK_URL='https://lemon.me' # Optional: where to redirect if deeplink fails
NEXT_PUBLIC_LEMON_IOS_STORE_URL='https://apps.apple.com/co/app/lemon-cash-tu-wallet-crypto/id1499421511'
NEXT_PUBLIC_LEMON_ANDROID_STORE_URL='https://play.google.com/store/apps/details?id=com.applemoncash'
## Explorer + API for on-chain history
NEXT_PUBLIC_BASE_EXPLORER_URL='https://basescan.org'
BASESCAN_API_URL='https://api.basescan.org/api'
BASESCAN_API_KEY='' # Optional; required for higher rate limits
WLD_CONTRACT_BASE='' # Optional: WLD ERC-20 contract on Base to filter
WLD_DECIMALS='18'
